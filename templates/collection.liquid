{% comment %} Collection template {% endcomment %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{{ collection.title }} - {{ shop.name }}</title>
    <link rel="stylesheet" href="{{ 'stylesheet.css' | asset_url }}">
</head>
<body>
<header id="header">
    <img src="{{ 'mischa-salon-rgb-black-2.png' | asset_url }}" id="logo" alt="{{ shop.name }}">
    <p class="header-text">Novinky</p>
    <p class="header-text">Péče o pleť</p>
    <p class="header-text">Péče o tělo</p>
    <p class="header-text">Vlasy a styling</p>
    <p class="header-text">Značky</p>
    <p class="header-text">Kontakt</p>
    <div id="header-rightt">
        <img src="{{ 'search.png' | asset_url }}" class="header-right" alt="Vyhledávání">
        <a href="/cart"><img src="{{ 'cart.png' | asset_url }}" class="header-right" alt="Košík"></a>
        <a href="/account"><img src="{{ 'user.png' | asset_url }}" class="header-right" alt="Účet"></a>
    </div>
</header>
<div class="collection-page">
    <h1>{{ collection.title }}</h1>
    {% if collection.products_count > 0 %}
    <div class="nabidka-produktu-main">
        {% for product in collection.products %}
        <div class="featured-produkts">
            <a href="{{ product.url }}">
                <img class="obrazek_karta" src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}">
            </a>
            <p class="featured-produkt-text">{{ product.title }}</p>
            <p class="price">{{ product.price | money }}</p>
            <form action="/cart/add" method="post">
                <input type="hidden" name="id" value="{{ product.variants.first.id }}">
                <button type="submit" class="featured-produkt-add-to-cart">Přidat do košíku</button>
            </form>
        </div>
        {% endfor %}
    </div>
    {% else %}
    <p>Žádné produkty v této kolekci.</p>
    {% endif %}
</div>
</body>
</html>
